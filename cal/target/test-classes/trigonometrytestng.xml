<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestTrigonometryFunctions" parallel="classes" thread-count="1">

    <listeners>
        <listener class-name="com.epam.cdp.cal.listeners.TestListeners"></listener>
    </listeners>

    <test name="calculator">

        <groups>
            <run>
                <include name="trigonometry" />
            </run>
        </groups>

        <classes>
            <class name="com.epam.cdp.cal.tests.CosineCalculatorTest" />
            <class name="com.epam.cdp.cal.tests.TangentCalculatorTest" />
            <class name="com.epam.cdp.cal.tests.CotangentCalculatorTest" />
            <class name="com.epam.cdp.cal.tests.SinusCalculatorTest" />
        </classes>

    </test>

</suite>