<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Demo Suite" parallel="classes" thread-count="1">
    <listeners>
        <listener class-name="com.epam.cdp.cal.listeners.TestListeners"/>
    </listeners>

    <test name="Sub Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.SubtractionCalculatorTest"/>
        </classes>
    </test>

    <test name="Sum Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.SumCalculatorTest"/>
        </classes>
    </test>


    <test name="Division Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.DivisionCalculatorTest"/>
        </classes>
    </test>

    <test name="Multiplication Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.MultiplicationCalculatorTest"/>
        </classes>
    </test>

    <test name="Power Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.PowerCalculatorTest"/>
        </classes>
    </test>
    <test name="Square root Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.SquareRootCalculatorTest"/>
        </classes>
    </test>
    <test name="Positive Number Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.PositiveNumberTest"/>
        </classes>
    </test>
    <test name="Negative Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.negative.NegativeNumberTest"/>
        </classes>
    </test>
    <test name="Sinus Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.SinusCalculatorTest"/>
        </classes>
    </test>
    <test name="Cosine Cal Test">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.CosineCalculatorTest"/>
        </classes>
    </test>
    <test name="Tangent">
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.TangentCalculatorTest"/>
        </classes>
    </test>

    <test name="calculator">
        <groups>
            <run>
                <include name="trigonometry"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.cdp.cal.tests.testng.positive.CotangentCalculatorTest"/>
        </classes>
    </test>


</suite>